  "include": [
    "src/**/*.ts",
    "src/**/*.tsx",
    "src/**/*.d.ts",
    "./src/custom.d.ts"
  ],
  "exclude": ["node_modules", "./src/stories", "dist", "**/*.test.ts"]
}

