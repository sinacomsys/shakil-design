{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "declaration": true,
    // "declarationDir": "types",
    "outDir": "lib",
    // "rootDir": "./src",
    "noEmit": false,
    "sourceMap": true,
    "emitDeclarationOnly": false,
    "target": "ES5",
    "module": "CommonJS",
    "jsx": "react-jsx",
    "esModuleInterop": true
  },
