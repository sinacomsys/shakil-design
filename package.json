{
  "name": "shakil-design",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "packages/*"
  ],
  "secure": true,
  "scripts": {
    "compile": "yarn workspace @shakil-design/component compile && yarn workspace @shakil-design/utils compile",
    "compile-utils": "yarn workspace @shakil-design/utils compile",
    "lint": "eslint . --ext tsx,ts  --fix",
    "lint-commit": "cross-env COMMIT=true eslint . --ext tsx,ts  --fix",
    "test": "yarn workspace @shakil-design/component test",
    "prettierAll": "prettier --write .",
    "storybook": "yarn workspace @shakil-design/component storybook",
    "build-storybook": "yarn compile && build-storybook",
    "zeplin": "zeplin connect",
    "release": "yarn lint-commit  && yarn compile  && npx lerna publish",
    "streight-release": "yarn lint-commit  && yarn compile  && npx lerna publish",
    "lerna-watch": "lerna run watch --stream",
    "lerna-build": "lerna run compile --stream",
    "lerna-clean": "lerna run clean --parallel",
    "prepare": "husky install"
  },
  "devDependencies": {
    "@commitlint/config-conventional": "^14.1.0",
    "@faker-js/faker": "^7.6.0",
    "@popperjs/core": "^2.11.7",
    "@storybook/addon-actions": "^6.5.8",
    "@storybook/addon-essentials": "^6.5.8",
    "@storybook/addon-interactions": "^6.5.8",
    "@storybook/addon-knobs": "^6.4.0",
    "@storybook/addon-links": "^6.5.8",
    "@storybook/builder-webpack5": "^6.5.8",
    "@storybook/manager-webpack5": "^6.5.8",
    "@storybook/node-logger": "^6.5.8",
    "@storybook/preset-create-react-app": "^4.1.2",
    "@storybook/preset-scss": "^1.0.3",
    "@storybook/react": "^6.5.8",
    "@storybook/testing-library": "^0.0.12",
    "@testing-library/jest-dom": "^5.11.6",
    "@testing-library/react": "^11.2.2",
    "@testing-library/user-event": "^12.6.0",
    "@types/classnames": "^2.2.11",
    "@types/jest": "^26.0.22",
    "@types/moment-jalaali": "^0.7.4",
    "@types/node": "^15.0.2",
    "@types/react": "^18.0.9",
    "@types/react-dom": "^18.0.5",
    "@types/react-measure": "^2.0.8",
    "@typescript-eslint/eslint-plugin": "^4.29.1",
    "@typescript-eslint/parser": "^4.29.1",
    "classnames": "^2.3.1",
    "commitlint": "^14.1.0",
    "concurrently": "^5.3.0",
    "cross-env": "^7.0.3",
    "css-loader": "^6.7.1",
    "eslint": "^7.32.0",
    "eslint-config-prettier": "^8.3.0",
    "eslint-plugin-prettier": "^4.2.1",
    "eslint-plugin-react": "^7.24.0",
    "eslint-plugin-react-hooks": "^4.2.0",
    "eslint-plugin-storybook": "^0.5.12",
    "framer-motion": "^7.6.5",
    "husky": "^8.0.0",
    "jest-watch-typeahead": "^0.6.2",
    "lerna": "^6.6.1",
    "less": "^4.1.3",
    "less-loader": "^7.3.0",
    "lint-staged": "^14.0.1",
    "lodash": "^4.17.21",
    "prettier": "^2.7.1",
    "prettier-plugin-jsdoc": "^0.4.2",
    "react": "^18.1.0",
    "react-ace": "^10.1.0",
    "react-app-rewired": "^2.2.1",
    "react-dom": "^18.1.0",
    "react-hook-form": "^7.39.1",
    "react-jss": "^10.9.2",
    "react-scripts": "^5.0.1",
    "reactjs-view-tests": "^2.4.0",
    "rimraf": "^3.0.2",
    "sass": "^1.55.0",
    "sass-loader": "^13.1.0",
    "storybook-addon-sass-postcss": "^0.1.3",
    "storybook-rtl-addon": "^0.3.3",
    "style-loader": "^3.3.1"
  },
  "dependencies": {
    "@sentry/browser": "^7.1.1",
    "@tanstack/react-virtual": "^3.0.0-beta.68",
    "jss-plugin-default-unit": "^10.10.0",
    "moment-jalaali": "^0.10.0",
    "react-hook-form-context": "^1.0.0",
    "react-measure": "^2.5.2",
    "react-poper": "^1.1.5",
    "react-popper": "^2.3.0",
    "reactjs-view-core": "^2.4.0",
    "ts-loader": "^9.5.1",
    "typescript": "^4.8.2",
    "usehooks-ts": "^2.9.1"
  },
  "peerDependencies": {
    "framer-motion": "^7.6.5",
    "react": "^18.1.0"
  },
  "keywords": [],
  "author": "sinaComs",
  "license": "ISC",
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "eslintConfig": {
    "overrides": [
      {
        "files": [
          "**/*.stories.*"
        ],
        "rules": {
          "import/no-anonymous-default-export": "off"
        }
      }
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  }
}
